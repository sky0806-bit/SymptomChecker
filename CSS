/* Enhanced Forms */
input, textarea, button {
    padding: 15px; /* Increased padding for a more spacious look */
    font-size: 16px; /* Increased font size for better readability */
    border: 1px solid #ddd; 
    border-radius: 10px; /* Rounded corners for a more modern feel */
    width: 100%; 
    transition: border-color 0.3s, box-shadow 0.3s, transform 0.3s; /* Added transition for smooth scaling */
    box-sizing: border-box; /* Ensures padding doesnâ€™t affect the overall size */
}

/* Focused Input / Textarea */
input:focus, textarea:focus {
    border-color: #ff758c; /* Focus border color */
    box-shadow: 0 0 8px rgba(255, 117, 140, 0.7); /* More intense box-shadow for focus effect */
    outline: none; /* Removes default outline */
    transform: scale(1.02); /* Slight scale-up effect when focused */
}

